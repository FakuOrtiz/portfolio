---
import { getLangFromUrl, useTranslations } from "../../i18n/utils";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<article
  class="flex flex-col-reverse items-center relative sm:flex-col sm:justify-end sm:items-end"
>
  <div
    class="flex w-full justify-end items-center absolute -bottom-8 right-2 sm:right-1 sm:bottom-5"
  >
    <p class="text-black mt-4 sm:mt-0 sm:mb-3">{t("head.myResume")}</p>

    <img src="/img/bottomArrow.svg" alt="Flecha" class="hidden w-7 sm:inline" />

    <img src="/img/topArrow.svg" alt="Flecha" class="w-7 sm:hidden" />
  </div>

  <div class="flex gap-4 sm:gap-1">
    <a href="https://www.linkedin.com/in/fakuortiz" target="_blank">
      <img src="/img/linkedin.svg" alt="Linkedin" class="w-10 sm:w-7" />
    </a>

    <a href="https://github.com/FakuOrtiz" target="_blank">
      <img src="/img/github.svg" alt="Github" class="w-10 sm:w-7" />
    </a>

    <img src="/img/cv.svg" alt="CV" class="w-10 sm:w-7" />
  </div>
</article>
