---
import { getLangFromUrl, useTranslations } from "../../i18n/utils";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

interface IExp {
  title: string;
  color: string;
  date: string;
  exp: string[];
}

const exps: IExp[] = t("experience.content") as any;
---

<section class="flex flex-col gap-5">
  <h3 class="text-black font-bold">{t("experience.title")}</h3>

  {
    exps.map((e) => (
      <article>
        <div class="flex justify-between mb-3">
          <h4>{e.title}</h4>
          <h4>{e.date}</h4>
        </div>

        <ul class="flex flex-col gap-3 list-disc pl-8">
          {e.exp.map((li) => (
            <li>{li}</li>
          ))}
        </ul>
      </article>
    ))
  }
</section>
